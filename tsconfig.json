{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "declaration": true,
        "module": "commonjs",
        "rootDir": "./src",
        "sourceMap": true,
        "sourceRoot": ".",
        "target": "es5",
        "outDir": "."
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./typings/**/*.d.ts",
        "./node_modules/*/*.d.ts",
        "./lib/**/*.d.ts",
        "./node_modules/typescript/bin/typescript.d.ts"
    ],
    "compileOnSave": true,
    "files": [
        "./src/lib/astToFactory.ts",
        "./src/lib/index.ts",
        "./src/lib/model.ts",
        "./src/lib/packageUtils.ts",
        "./src/lib/readerWriter.ts",
        "./src/test/test.ts",
        "./test/test.d.ts",
        "./typings/es6/es6.d.ts",
        "./typings/node/node.d.ts",
        "./typings/tsd.d.ts"
    ]
}
